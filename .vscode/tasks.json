{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "web:dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": { "cwd": "${workspaceFolder}/apps/web" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "mobile:start",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start"],
      "options": { "cwd": "${workspaceFolder}/apps/mobile" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "dev:all",
      "dependsOn": ["web:dev", "mobile:start"],
      "dependsOrder": "parallel"
    }
  ]
}
