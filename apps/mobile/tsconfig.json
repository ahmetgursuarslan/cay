{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-native"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "App.tsx",
    // Exclude the web entry from TS by moving it to exclude below
    // "App.web.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "__create/**/*.ts",
    "__create/**/*.tsx",
    "polyfills/**/*.ts",
    "polyfills/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    ".metro-virtual",
    "caches",
    ".expo",
    // Exclude web-specific files so TS doesn't typecheck them
    "App.web.tsx",
    "polyfills/web/**"
  ]
}