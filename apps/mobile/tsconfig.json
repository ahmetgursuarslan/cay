{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": [
      "react",
      "react-native"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "App.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "__create/**/*.ts",
    "__create/**/*.tsx",
    "polyfills/**/*.ts",
    "polyfills/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    ".metro-virtual",
    "caches",
    ".expo",
    "App.web.tsx",
    "polyfills/web/**"
  ],
  "extends": "expo/tsconfig.base"
}
